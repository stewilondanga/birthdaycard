<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="io.github.stewilondanga.birthdaycard.LocationActivity">
    
    <ImageView
        android:id="@+id/ocean_view"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ocean"/>

    <TextView
        android:id="@+id/pebble_beach"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/ocean_view"
        android:text="Pebble Beach"
        android:textAppearance="?android:textAppearanceMedium"/>

    <TextView
        android:id="@+id/california_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pebble_beach"
        android:layout_toRightOf="@id/ocean_view"
        android:text="California"
        android:textAppearance="?android:textAppearanceSmall"/>

    <TextView
        android:id="@+id/miles_away"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/california_view"
        android:layout_toRightOf="@id/ocean_view"
        android:text="10 miles away"
        android:textAppearance="?android:textAppearanceSmall"/>

</RelativeLayout>
